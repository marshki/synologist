#!/usr/bin/env bash

# eth mac ip (but unordered)
# ip addr show | awk '/eth/ {print $2}' 
# eth3:
# 00:11:32:79:95:1e
# 169.254.206.44/16
# eth2:
# 00:11:32:79:95:1d
# 169.254.69.117/16

# mac ip 
# ip addr show dev eth0 |awk '/link/ || /inet/ {print $2}'
# 00:11:32:79:95:1b
# 169.254.21.82/16

mac_address() {

  # ifconfig to list all interfaces
  # awk to extract eth[0-5] AND HWaddr
  # print fields 1, 5

  mac=$(ifconfig -a |awk '/eth[0-5]/ && /HWaddr/ {print $1, $5}')
    #printf "%s\n" "$mac"
}



IP_address() {

  # IP addr show|
  # awk match eth[0-5] AND inet
  # print fields 7,2
  # sort

  IP=$(ip addr show |awk '/eth[0-5]/ && /inet/ {print $7, $2 |"sort"}' )
    #printf "%s\n" "$IP"
}

for items in:



mac_address
IP_address

printf "%s\n" "$mac $ip"
